@model List<WebApplication3.Models.Class>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список классов</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название класса</th>
            <th>Классный руководитель</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cls in Model)
        {
            <tr>
                <td>@cls.Name</td>
                <td>@(cls.Teacher != null ? cls.Teacher.FullName : "Не назначен")</td>
                <td>
                    <a href="/Classes/AssignTeacher/@cls.Id" class="btn btn-primary btn-sm">Назначить руководителя</a>
                </td>
            </tr>
        }
    </tbody>
</table>