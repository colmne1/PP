@model List<WebApplication3.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список учеников</h2>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label>Выберите класс:</label>
        <select name="classId" asp-items="ViewBag.Classes" onchange="this.form.submit()" class="form-control">
            <option value="">Все классы</option>
        </select>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Дата рождения</th>
            <th>Класс</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.LastName</td>
                <td>@student.FirstName</td>
                <td>@student.MiddleName</td>
                <td>@student.BirthDate</td>
                <td>@student.Class?.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@student.Id" onclick="return confirm('Вы уверены, что хотите удалить ученика?')">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить ученика</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}