@model WebApplication3.Models.ReportViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отчёты</h2>

<!-- 1. Самый старший первоклассник -->
<div class="mb-4">
    <h4>Самый старший первоклассник</h4>
    @if (Model.YoungestFirstGraderData != null)
    {
        <p>@Model.YoungestFirstGraderData.LastName @Model.YoungestFirstGraderData.FirstName @Model.YoungestFirstGraderData.MiddleName, Дата рождения: @Model.YoungestFirstGraderData.BirthDate.ToString("dd.MM.yyyy"), Класс: @Model.YoungestFirstGraderData.ClassName</p>
    }
    else
    {
        <p>Первоклассники не найдены.</p>
    }
</div>

<!-- 2. Количество учеников во всех вторых классах -->
<div class="mb-4">
    <h4>Количество учеников во всех вторых классах</h4>
    <p>@Model.SecondGradeStudentsCount</p>
</div>

<!-- 3. Количество учеников у каждого классного руководителя -->
<div class="mb-4">
    <h4>Количество учеников у каждого классного руководителя</h4>
    @if (Model.StudentsPerTeacherData != null && Model.StudentsPerTeacherData.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Классный руководитель</th>
                    <th>Количество учеников</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StudentsPerTeacherData)
                {
                    <tr>
                        <td>@item.TeacherName</td>
                        <td>@item.StudentCount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Классные руководители не найдены.</p>
    }
</div>